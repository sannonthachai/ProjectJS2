<!DOCTYPE html>
html(lang="en")
  include includes/head.pug
  body
    .container

        .row.mt-5
        .col-md-6.m-auto
            .card.card-body
                h1.text-center.mb-3
                    i.fas.fa-sign-in-alt  Login
                
                include partials/messages.pug

                form(name='login' , method='POST' , action="/login")
                    .form-group
                        label(for='username') Username
                        input.form-control(name='username' , type='text' , placeholder='uesrname')
                    .form-group
                        label(for="password") Password
                        input.form-control(name='password' , type='password' , placeholder='password')
                    .form-group
                        input.btn.btn-primary.btn-block(type='submit' , value='Log in')

    include includes/bootstrap.pug