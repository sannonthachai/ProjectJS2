extends layout

block content
    .container
      .row.mt-5
        .col-md-6.m-auto
            .card.card-body
                h1.text-center.mb-3
                    i.fas.fa-sign-in-alt  Login
                include partials/messages.pug
                form(name='login' , method='POST' , action="/login")
                    .form-group
                        label(for='username') Username
                        input.form-control(name='username' , type='text' , placeholder='uesrname')
                    .form-group
                        label(for="password") Password
                        input.form-control(name='password' , type='password' , placeholder='password')
                    .form-group
                        input.btn.btn-primary.btn-block(type='submit' , value='Log in')
                p Need an account?
                  a(href="/signup")  Signup
                p Or go
                  a(href="/")  Home